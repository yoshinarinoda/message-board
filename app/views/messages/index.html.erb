<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
 <div class="form-group">
   <label for="message_name" class="col-sm-1 control-label">名前</label>
   <div class="col-sm-5">
     <%= f.text_field :name, class: "form-control" %>
   </div>
   <div class="col-sm-6"></div>
</div>
 <div class="form-group">
   <label for="message_body" class="col-sm-1 control-label">内容</label>
   <div class="col-sm-5">
     <%= f.text_area :body, class: "form-control" %>
   </div>
   <div class="col-sm-6"></div>
 </div>
  <div class="form-group">
    <div class="col-sm-1"></div>
    <div class="col-sm-5">
  <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  <div class="col-sm-6"></div>
  </div>
<% end %>